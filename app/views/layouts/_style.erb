<style>
:root {
  --font-family-sans-serif: "Arial", 'BIZ UDGothic', "Hiragino Kaku Gothic ProN", "Hiragino Sans", "Meiryo", sans-serif;
  --font-family-serif: "Times New Roman", "Hiragino Mincho ProN", "YuMincho", "Yu Mincho", serif;
  --font-family-heading: "Headland One", serif;

  --color-secondary: #6C757D;
  --color-success: #28a745;
  --color-danger: #dc3545;
  --color-dark: #454d55;
  --color-text: #192323;
  --color-bg: #f3f2ee;
}

/* カード（bootstrap拡張） */
.image-box{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.image-box > img{
  width: 100%;
  height: 100%;
  max-height: 360px;
  object-fit: contain;
}
.card-another-link{
  z-index: 1;
  position: relative;
}
.card-profile{
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 1rem;
}
.project-status{
  z-index: 1;
  position: absolute;
  top: 0.5rem;
  left: 0.5rem;
  display: flex;
}
.project-bookmark{
  z-index: 2;
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  display: flex;
}

/* ボタン（bootstrap拡張） */
.btn{
  white-space: nowrap;
}
.btn-bg-white:not(:hover){
  background-color: #fff;
}
.btn-unfollow{
  display: inline-grid;
}
.btn-unfollow:not(:hover){
  border-color: var(--color-success) !important;
  background-color: var(--color-success) !important;
}
.btn-unfollow::before{
  grid-area: -1 / 1;
  content: "フォロー中";
  opacity: 1;
  transition: opacity 0.15s ease-in-out;
}
.btn-unfollow__text{
  grid-area: -1 / 1;
  opacity: 0;
  transition: opacity 0.15s ease-in-out;
}
.btn-unfollow:hover::before{
  opacity: 0;
}
.btn-unfollow:hover > .btn-unfollow__text{
  opacity: 1;
}

/* タブ（bootstrap拡張） */
.nav-link-tab{
  position: relative;
}
.nav-link-tab.active::before{
  content: "";
  z-index: 1;
  display: block;
  position: absolute;
  left: 1.25rem;
  right: 1.25rem;
  bottom: 0;
  height: 4px;
  background-color: var(--color-secondary);
}

/* テキスト制御（共通） */
.text-oneline,
.text-twoline{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.text-oneline{
  -webkit-line-clamp: 1;
}
.text-twoline{
  -webkit-line-clamp: 2;
}
.text-wbr{
  word-break: keep-all;
}

/* リスト（共通） */
.list-data{
  display: grid;
  grid-template-columns: 100%;
  column-gap: 2em;
}
@media screen and (min-width: 576px) {
  .list-data{
    grid-template-columns: auto 1fr;
  }
  .list-data > dt{
    grid-column: 1;
  }
  .list-data > dd{
    grid-column: 2;
  }
}
.email{
  overflow: hidden;
  text-overflow: ellipsis;
}

/* エラーメッセージ（共通） */
#error_explanation,
.flash-message.alert{
  color: var(--color-danger);
}
.field_with_errors{
  display: contents;
}

</style>