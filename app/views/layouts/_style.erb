<style>
:root {
  --font-family-sans-serif: "Arial", 'BIZ UDGothic', "Hiragino Kaku Gothic ProN", "Hiragino Sans", "Meiryo", sans-serif;
  --font-family-serif: "Times New Roman", "Hiragino Mincho ProN", "YuMincho", "Yu Mincho", serif;
  --font-family-heading: "Headland One", serif;

  --color-gold: #a28557;
  --color-secondary: #6C757D;
  --color-danger: #dc3545;
  --color-dark: #454d55;
  --color-text: #192323;
  --color-bg: #f3f2ee;

  --swiper-navigation-color: #ffffff;
  --swiper-pagination-color: #ffffff;
}
/* box-sizing */
*,
*::before,
*::after {
  box-sizing: border-box;
}
/* body */
body {
  position: relative;
  font-family: var(--font-family-sans-serif);
  color: var(--color-text);
  background-color: var(--color-bg);
  background-image: url(<%= asset_path("kinda-jean.png") %>);
  min-width: 320px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

main{
  flex: 1;
}

.wrap-2col{
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

.image-box{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.image-box > img{
  width: 100%;
  height: 100%;
  max-height: 360px;
  object-fit: contain;
}
.card-another-link{
  z-index: 1;
  position: relative;
}
.project-status{
  z-index: 1;
  position: absolute;
  top: 0.5rem;
  left: 0.5rem;
  display: flex;
}
.project-bookmark{
  z-index: 2;
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  display: flex;
}
/* エラーメッセージ（共通） */
#error_explanation,
.flash-message.alert{
  color: var(--color-danger);
}

.field_with_errors{
  display: contents;
}

</style>