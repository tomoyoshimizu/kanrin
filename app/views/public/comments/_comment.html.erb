<div>
  <div class="d-flex align-items-center my-2">
    <%= render "public/users/link", user: comment.user %>
    <p class="mb-0 ml-2"><small class="text-muted"><%= comment.created_at.strftime('%Y/%m/%d') %></small></p>
    <% if comment.user == current_user %>
      <div class="ml-2">
        <%= link_to "削除", comment_path(comment), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-outline-danger rounded-pill", remote: true %>
      </div>
    <% end %>
  </div>
  <p><%= comment.body %></p>
</div>
