<div class="card mb-4">
  <div class="card-body">
    <div class="d-md-flex">
      <div class="mb-3 mb-md-0 text-center">
        <%= image_tag user.get_image(128, 128), class: "border border-light rounded-circle" %>
      </div>
      <div class="ml-md-3 w-100">
        <div class="d-flex flex-wrap align-items-center mb-3">
          <h3 class="h5 font-weight-bold"><%= user.name %></h3>
          <div class="ml-auto">
            <%= render "public/users/btn", user: @user %>
          </div>
        </div>
        <p><%= simple_format(user.description, sanitize: true) %></p>
      </div>
    </div>
  </div>
  <div class="card-footer bg-light p-0">
    <ul class="nav nav-fill">
      <li class="nav-item">
        <%= link_to "プロジェクト", user_path(user), class: helper_nav_link_class("show") %>
      </li>
      <li class="nav-item">
        <%= link_to "フォロー", followees_user_path(user), class: helper_nav_link_class("followees") %>
      </li>
      <% if @user == current_user && @user.has_follower? %>
        <li class="nav-item">
          <%= link_to "フォロワー", followers_user_path(user), class: helper_nav_link_class("followers") %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to "ブックマーク", bookmarks_user_path(user), class: helper_nav_link_class("bookmarks") %>
      </li>
    </ul>
  </div>
</div>