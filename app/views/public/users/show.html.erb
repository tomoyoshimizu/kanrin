<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-xl-10">
      <%= render "public/users/header", user: @user %>
      <div class="row justify-content-end">
        <% if @user == current_user %>
          <div class="col-12 col-sm-6 col-lg-4 mb-4">
            <%= link_to new_project_path, class: "btn btn-block btn-success rounded-pill" do %>
              新規プロジェクトを追加
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <%= render partial: "public/projects/summary", collection: @user.projects, as: "project" %>
      </div>
    </div>
  </div>
</div>