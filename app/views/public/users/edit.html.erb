<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8 mb-4">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 font-weight-bold m-0">プロフィール編集</h1>
        </div>
        <div class="card-body">
          <%= render "public/users/form", user: @user %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 mb-4">
      <%= link_to user_path(@user), method: :delete, data: {confirm: "本当に退会しますか？"}, class: "btn btn-block btn-danger rounded-pill" do %>
        退会する
      <% end %>
    </div>
  </div>
</div>
