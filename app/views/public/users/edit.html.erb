<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-9 col-xl-8 mb-4">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-baseline">
          <h1 class="h4 m-0">プロフィール編集</h1>
          <p class="m-0"><small><span class="text-required">*</span>は必須項目です</small></p>
        </div>
        <div class="card-body">
          <%= render "public/users/form", user: @user %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 mb-4">
      <%= link_to "退会する", user_path(@user), method: :delete, data: {confirm: "本当に退会しますか？"}, class: "btn btn-block btn-danger rounded-pill" %>
    </div>
  </div>
</div>
