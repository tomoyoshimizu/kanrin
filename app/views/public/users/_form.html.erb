<%= form_with(model: user) do |form| %>
  <%= render "public/shared/error_messages", resource: form.object %>

  <div class="form-group row">
    <%= form.label :image, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 align-self-center">
      <%= form.file_field :image, accept: "image/*", class: "form-control-file" %>
    </div>
  </div>

  <div class="form-group form-row">
    <%= form.label :name, class: "col-md-3 col-form-label required" %>
    <div class="col-md-9 align-self-center">
      <%= form.text_field :name, autocomplete: "username", required: "required", class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-row">
    <%= form.label :description, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 align-self-center">
      <%= form.text_area :description, rows: "4", class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-row">
    <%= form.label :email, class: "col-md-3 col-form-label required" %>
    <div class="col-md-9 align-self-center">
      <%= form.text_field :email, autocomplete: "email", required: "required", class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-row">
    <%= form.label :telephone_number, class: "col-md-3 col-form-label d-flex flex-wrap align-items-baseline required" do %>
      <span>電話番号</span><small>（ハイフンなし）</small>
    <% end %>
    <div class="col-md-9 align-self-center">
      <%= form.text_field :telephone_number, autocomplete: "tel", required: "required", class: "form-control" %>
    </div>
  </div>

  <hr>

  <div class="form-group row mb-0">
    <div class="col-6">
      <%= link_to "キャンセル", user_path(user), class: "btn btn-lg btn-outline-secondary btn-block rounded-pill" %>
    </div>
    <div class="col-6">
      <%= form.submit class: "btn btn-lg btn-outline-success btn-block rounded-pill" %>
    </div>
  </div>

<% end %>