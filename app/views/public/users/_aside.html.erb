<div class="card mb-3">
  <div class="card-body">
    <%= image_tag current_user.get_image(128, 128), class: "border border-light rounded-circle mb-3" %>
    <%= link_to user_path(current_user), class: "text-reset font-weight-bold stretched-link" do %>
      <h3 class="card-title h5 font-weight-bold text-oneline"><%= current_user.name %></h3>
    <% end %>
    <p class="card-text text-twoline">
      <small>
        <%= simple_format(current_user.description, sanitize: true) %>
      </small>
    </p>
    <%= render "public/users/btn", user: current_user %>
  </div>
</div>
<div class="mb-4">
  <%= link_to "新規プロジェクト作成", new_project_path, class: "btn btn-lg btn-block btn-outline-success btn-bg-white rounded-pill" %>
</div>
