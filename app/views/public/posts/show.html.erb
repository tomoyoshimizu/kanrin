<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-xl-10">
      <div class="card mb-2">
        <div class="card-header">
          <%= render "public/users/link", user: @post.user %>
          <span>＞</span>
          <%= link_to @post.project.title, project_path(@post.project), class: "text-reset font-weight-bold" %>
        </div>
        <% if @post.image.attached? %>
          <div class="card-img-top text-center bg-light">
            <%= image_tag @post.image, class: "mw-100" %>
          </div>
        <% end %>
        <div class="card-body">
          <p><%= @post.body %></p>
          <p class="text-muted m-0">
            <small>投稿日：<%= @post.created_at.strftime("%Y/%m/%d") %></small>
            <% unless @post.working_minutes.blank? %>
              ｜<small>作業時間：<%= @post.working_minutes %>min</small>
            <% end %>
          </p>
        </div>
        <div id="post_comments">
          <%= render "public/comments/comment_list", post: @post %>
        </div>
        <div id="post_comment_form" class="card-body border-top">
          <%= render "public/comments/form", post: @post, comment: @new_comment %>
        </div>
        <% if current_user == @post.user %>
          <div class="card-footer">
            <div class="row justify-content-center">
              <div class="col-6">
                <%= link_to edit_post_path(@post), class: "btn btn-block btn-outline-secondary rounded-pill" do %>
                  編集
                <% end %>
              </div>
              <div class="col-6">
                <%= link_to post_path(@post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-block btn-outline-danger rounded-pill" do %>
                  削除
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
