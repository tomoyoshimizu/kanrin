<%= form_with(model: post) do |form| %>
  <%= render "public/shared/error_messages", resource: form.object %>

  <%= form.hidden_field :project_id %>

  <div class="form-group form-row">
    <%= form.label :image, class: "col-md-2 px-0" %>
    <%= form.file_field :image, accept: "image/*", class: "form-control-file col-md-10" %>
  </div>

  <div class="form-group form-row">
    <%= form.label :body, class: "col-md-2 px-0" %>
    <%= form.text_area :body, class: "form-control col-md-10" %>
  </div>

  <div class="form-group form-row">
    <%= form.label :working_minutes, class: "col-md-2 px-0" %>
    <%= form.text_field :working_minutes, pattern: "[0-9]+", title: "半角英数字で入力してください", class: "form-control col-md-10" %>
  </div>

  <div class="form-group form-row">
    <div class="col-6">
      <%= link_to "キャンセル", "javascript:history.back()", class: "btn btn-lg btn-outline-secondary btn-block rounded-pill" %>
    </div>
    <div class="col-6">
      <%= form.submit class: "btn btn-lg btn-outline-success btn-block rounded-pill" %>
    </div>
  </div>

<% end %>