<% if user.is_followed_by?(current_user) %>
  <%= link_to user_relationship_path(user.id), method: :delete, class: "btn btn-danger btn-unfollow rounded-pill" do %>
    <span class="btn-unfollow__text">フォロー解除</span>
  <% end %>
<% else %>
  <%= link_to "フォローする", user_relationship_path(user.id), method: :post, class: "btn btn-outline-success btn-bg-white rounded-pill" %>
<% end %>
