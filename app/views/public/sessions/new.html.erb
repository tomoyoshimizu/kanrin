<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
      <div class="card">
        <div class="card-body">
          <% if alert %>
            <p class="flash-message alert"><%= alert %></p>
          <% end %>
          <%= form_with model: @user, url: user_session_path do |form| %>
            <div class="form-group form-row">
              <%= form.label :email, class: "col-md-2 px-0" %>
              <%= form.text_field :email, autocomplete: "email", class: "form-control col-md-10" %>
            </div>
            <div class="form-group form-row">
              <%= form.label :password, class: "col-md-2 px-0" %>
              <%= form.password_field :password, autocomplete: "current-password", class: "form-control col-md-10" %>
            </div>
            <div class="form-group">
              <%= form.submit "ログイン" ,class: "btn btn-lg btn-outline-secondary btn-block rounded-pill" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
