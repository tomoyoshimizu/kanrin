<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8 mb-4">
      <div class="jumbotron bg-white">
        <h1 class="display-4">Welcome to Kanrin.</h1>
        <% unless user_signed_in? %>
        <hr class="my-4">
          <div class="row">
            <div class="col-6 mb-4">
              <%= link_to new_user_session_path, class: "btn btn-block btn-outline-secondary rounded-pill" do %>
                ログイン
              <% end %>
            </div>
            <div class="col-6 mb-4">
              <%= link_to new_user_registration_path, class: "btn btn-block btn-outline-success rounded-pill" do %>
                新規登録
              <% end %>
            </div>
            <div class="col-12 mb-4">
              <%= link_to users_guest_sign_in_path, method: :post, class: "btn btn-secondary btn-block rounded-pill" do %>
                ゲストログイン（閲覧用）
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>