<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h3 m-0">管理者ログイン</h1>
        </div>
        <div class="card-body">
          <% if alert %>
            <p class="flash-message alert"><%= alert %></p>
          <% end %>
          <%= form_with model: @admin, url: admin_session_path do |form| %>
            <div class="form-group form-row align-items-center">
              <%= form.label :email, class: "col-md-3 pr-4 m-0" %>
              <%= form.text_field :email, autocomplete: "email", class: "form-control col-md-9" %>
            </div>
            <div class="form-group form-row align-items-center">
              <%= form.label :password, class: "col-md-3 pr-4 m-0" %>
              <%= form.password_field :password, autocomplete: "current-password", class: "form-control col-md-9" %>
            </div>
            <div class="form-group m-0">
              <%= form.submit "ログイン" ,class: "btn btn-lg btn-outline-secondary btn-block rounded-pill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
